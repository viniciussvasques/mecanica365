# Configurações do Banco de Dados
DATABASE_URL="postgresql://user:password@localhost:5432/carvex_brasil?schema=public"

# Configurações de Autenticação
JWT_SECRET=seu_segredo_jwt_aqui
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_SECRET=seu_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Configurações do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=86400  # 24 horas em segundos

# Configurações de API Externa
DETRAN_API_KEY=sua_chave_detran
SINESP_API_KEY=sua_chave_sinesp
SERPRO_API_KEY=sua_chave_serpro

# Configurações de E-mail
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=seu_email@example.com
SMTP_PASSWORD=sua_senha_email
SMTP_FROM="Carvex Brasil <contato@carvex.app>"

# Configurações de Ambiente
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3001

# Configurações de Log
LOG_LEVEL=debug
LOG_TO_FILE=true

# Configurações de Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB

# Configurações de Cache
CACHE_ENABLED=true
CACHE_TTL=86400  # 24 horas em segundos

# Configurações de Segurança
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX=100  # 100 requisições por janela

# Configurações de Monitoramento
SENTRY_DSN=sua_dsn_do_sentry
NEW_RELIC_LICENSE_KEY=sua_chave_new_relic

# Configurações de Filas
QUEUE_CONNECTION=redis
QUEUE_NAME=carvex-jobs

# Configurações de Armazenamento
STORAGE_DRIVER=local  # local, s3, gcs
AWS_ACCESS_KEY_ID=seu_aws_key
AWS_SECRET_ACCESS_KEY=sua_aws_secret
AWS_REGION=sa-east-1
AWS_BUCKET=carvex-brasil

# Configurações de Notificação
PUSH_NOTIFICATION_ENABLED=false
PUSH_NOTIFICATION_TOPIC=carvex-updates

# Configurações de Teste
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/carvex_test?schema=public
