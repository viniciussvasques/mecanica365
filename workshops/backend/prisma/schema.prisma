// Templates de manutenção (ex: "Revisão 10.000km", "Troca de Óleo")
model MaintenanceTemplate {
  id          String  @id @default(uuid())
  tenantId    String  @map("tenant_id")
  name        String  @db.VarChar(100) // "Revisão 10.000km", "Troca de Óleo"
  description String? @db.Text
  category    String  @db.VarChar(50) // preventive, corrective, inspection

  // Intervalos de manutenção
  intervalKm     Int? @map("interval_km") // A cada X km
  intervalMonths Int? @map("interval_months") // A cada X meses

  // Itens da revisão
  items Json @default("[]") // Array de itens a verificar/trocar

  // Custos estimados
  estimatedCost  Decimal? @map("estimated_cost") @db.Decimal(10, 2)
  estimatedHours Decimal? @map("estimated_hours") @db.Decimal(5, 2)

  // Peças necessárias (IDs de peças típicas)
  suggestedParts Json @default("[]") @map("suggested_parts") // [{partId, quantity, optional}]

  isActive  Boolean  @default(true) @map("is_active")
  isDefault Boolean  @default(false) @map("is_default") // Template padrão do sistema
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relações
  tenant    Tenant                       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  schedules VehicleMaintenanceSchedule[]

  @@index([tenantId])
  @@index([tenantId, category])
  @@index([tenantId, isActive])
  @@map("maintenance_templates")
}

// Manutenções programadas para cada veículo
model VehicleMaintenanceSchedule {
  id         String  @id @default(uuid())
  tenantId   String  @map("tenant_id")
  vehicleId  String  @map("vehicle_id")
  templateId String? @map("template_id")

  // Detalhes da manutenção
  name        String  @db.VarChar(100) // Nome da manutenção
  description String? @db.Text
  category    String  @db.VarChar(50) // preventive, corrective, inspection

  // Próxima manutenção
  nextDueKm   Int?      @map("next_due_km") // Quilometragem para próxima
  nextDueDate DateTime? @map("next_due_date") // Data para próxima

  // Status
  status   String @default("pending") @db.VarChar(30) // pending, due, overdue, completed, cancelled
  priority String @default("normal") @db.VarChar(20) // low, normal, high, urgent

  // Alertas
  alertSentAt    DateTime? @map("alert_sent_at") // Quando o alerta foi enviado
  alertDismissed Boolean   @default(false) @map("alert_dismissed")

  // Custo estimado
  estimatedCost Decimal? @map("estimated_cost") @db.Decimal(10, 2)

  // Notas
  notes String? @db.Text

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  completedAt   DateTime? @map("completed_at")
  completedById String?   @map("completed_by_id")

  // Relações
  tenant   Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  vehicle  CustomerVehicle      @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  template MaintenanceTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  history  MaintenanceHistory[]

  @@index([tenantId])
  @@index([vehicleId])
  @@index([tenantId, status])
  @@index([tenantId, nextDueDate])
  @@index([tenantId, vehicleId, status])
  @@map("vehicle_maintenance_schedules")
}

