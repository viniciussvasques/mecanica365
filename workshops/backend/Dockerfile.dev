FROM node:20-slim

# Instalar dependências do sistema
# Adicionar repositório oficial do PostgreSQL para instalar versão 16
RUN apt-get update && apt-get install -y \
    gnupg2 \
    curl \
    && curl -fsSL https://www.postgresql.org/media/keys/ACCC4CF8.asc | gpg --dearmor -o /usr/share/keyrings/postgresql-keyring.gpg \
    && echo "deb [signed-by=/usr/share/keyrings/postgresql-keyring.gpg] http://apt.postgresql.org/pub/repos/apt bookworm-pgdg main" > /etc/apt/sources.list.d/pgdg.list \
    && apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    postgresql-client-16 \
    wget \
    bash \
    && rm -rf /var/lib/apt/lists/*

# Criar diretório de trabalho
WORKDIR /app

# Copiar arquivos de dependências primeiro
COPY package*.json ./

# Instalar dependências (incluindo devDependencies para nest CLI)
RUN npm ci

# Limpar qualquer resíduo do Prisma Client
RUN rm -rf node_modules/.prisma && rm -rf node_modules/@prisma/client

# Copiar schema do Prisma
COPY prisma ./prisma/

# Gerar Prisma Client sem WASM (modo nativo)
RUN npx prisma generate --schema=./prisma/schema.prisma

# Copiar código fonte (depois de instalar dependências e gerar Prisma)
COPY . .

# Copiar script de entrada
COPY scripts/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Expor porta
EXPOSE 3001

# Usar script de entrada
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]

# Comando padrão (pode ser sobrescrito no docker-compose)
CMD ["npm", "run", "start:dev"]
