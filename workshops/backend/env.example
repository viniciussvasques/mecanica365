# ============================================
# APLICAÇÃO
# ============================================
APP_NAME=Mecânica365 API
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ============================================
# BANCO DE DADOS - PostgreSQL
# ============================================
POSTGRES_USER=mecanica365
POSTGRES_PASSWORD=mecanica365_dev
POSTGRES_DB=mecanica365_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://mecanica365:mecanica365_dev@localhost:5432/mecanica365_db?schema=public

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT - Autenticação
# ============================================
JWT_SECRET=your-secret-key-here-min-32-characters-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# VEHICLE HISTORY SERVICE
# ============================================
VEHICLE_HISTORY_API_URL=http://localhost:3002
VEHICLE_HISTORY_API_KEY=

# ============================================
# DOCKER (opcional - usado no docker-compose)
# ============================================
# As variáveis acima são usadas no docker-compose.yml
# Para desenvolvimento local sem Docker, use os valores acima
# Para Docker, o docker-compose.yml usa essas variáveis


