FROM node:20-alpine

WORKDIR /app

# Instalar dependências necessárias para rebuilds rápidos
RUN apk add --no-cache libc6-compat

# Copiar arquivos de dependências
COPY package*.json ./

# Instalar dependências
RUN npm install

# Copiar o resto do código (será sobrescrito pelo volume em desenvolvimento)
COPY . .

# Expor porta
EXPOSE 3000

# Comando para desenvolvimento
CMD ["npm", "run", "dev"]
